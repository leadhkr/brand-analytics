<!-- ERRORS -->
<%= flash.now[:errors] %>

<!-- LOGIN FORM -->
  <%= form_tag sessions_path do %>
  <div class="form-group">
    <div><%= text_field_tag :email, nil, placeholder: 'Email', class: "form-control" %></div>
  </div>

  <div class="form-group">
    <div><%= password_field_tag :password, nil, placeholder: 'Password', class: "form-control"  %></div>
  </div>

  <div class="form-group">
    <div><%= submit_tag 'Log In', class: "btn btn-primary"  %></div>
  </div>
  <% end %>
