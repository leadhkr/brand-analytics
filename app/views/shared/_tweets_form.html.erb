<h4>Search Tweets</h4>
<hr>
<%= form_tag group_tweets_path(@group) do %>
  <div>
    <%= text_field_tag :search_parameter, nil, placeholder: "Enter Twitter Search Parameter" %>
  </div>
  <div>
    <%= collection_select :language_code, :id, LanguageCode.all, :name, :name, selected: 'English' %>
  </div>
  <div>
    <%= number_field_tag :tweet_count %>
  </div>

  <div>
    <%= radio_button_tag :result_type, 'recent', checked: true %>
    <%= label_tag :result_type_recent, 'Recent' %>
    <%= radio_button_tag :result_type, 'popular' %>
    <%= label_tag :result_type_popular, 'Popular' %>
    <%= radio_button_tag :result_type, 'mixed' %>
    <%= label_tag :result_type_mixed, 'Mixed' %>
  </div>
  <div>
    <%= submit_tag %>
  </div>
<% end %>
