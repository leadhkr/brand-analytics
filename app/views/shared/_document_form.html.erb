<h4>Upload Document</h4>
<hr>
<div><%=flash[:error]%></div>
<div class="form-group">
  <div class="row">
    <div class="col-md-4">
      <%= form_for [@group, @document] do |f| %>
      	<div>
      		<%= f.label :title, 'Document Title' %></br>
      		<%= f.text_field :title, placeholder: 'Title', class: "form-control" %>
      	</div>

      	<div>
      		<%= f.label :text, 'Upload File'%></br>
      		<%= f.file_field :text %>
      	</div>

        <div>
    	     <%= f.submit  "Submit", class: "btn btn-md btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
