<%=form_for @document do |f| %>
	<!-- <%= f.text_area :text %> -->
	<%= f.file_field :text %>
	<%= f.fields_for :document_keyword do |doc_keyword_form| %>
		<%= doc_keyword_form.fields_for :keyword do |keyword_form| %>
		<p><%= keyword_form.text_field :name %></p>
		<% end %>
	<% end %>
	<%= f.submit %>

<% end %>
