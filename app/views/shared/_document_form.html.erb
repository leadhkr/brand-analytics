<h4>Upload Document</h4>
<hr>
<div><%=flash[:error]%></div>
<div class="form-group">
  <div class="row">
    <div class="col-md-4">
    <%=form_for [@group, @document] do |f| %>
    	<p>
    		<%= f.label :title, 'Document Title' %></br>
    		<%= f.text_field :title, placeholder: 'Title', class: "form-control" %>
    	</p>

    	<p>
    		<%= f.label :text, 'Upload File'%></br>
    		<%= f.file_field :text %>
    	</p>
    	<%= f.submit  "Submit", class: "btn btn-md btn-default"   %>
    <% end %>
    </div>
  </div>
</div>