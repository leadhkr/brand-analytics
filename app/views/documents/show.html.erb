<div class="col-md-offset-2 col-md-8">
  <!-- TOC -->
  <div class='document-score'>
    <span class="<%= @document.sentiment.sentiment_label %>">
      <%= @document.title %>
      <%= image_tag @document.sentiment.sentiment_image, class: 'twitter-search-sentiment-image' %>
      <%= @document.sentiment.sentiment_percentage %>%
    </span>
  </div>
  <div class="secondary-scores">
    Polarity Score: <%= @document.sentiment.polarity_score %>
  </div>
  <hr>

  <!-- SCORE TABLE -->
  <div class="panel panel-default">
    <div class="panel-heading data-header">Score Table</div>
    <div class="panel-body">
      <%= render  partial: "shared/score_table"  %>
    </div>
  </div>
  <hr>

  <!-- ANALYTICS -->
  <div class="panel panel-default">
    <div class="panel-heading data-header">Word Cloud</div>
    <div class="panel-body word-cloud-panel">
      <div id="word-cloud" data-document-search="<%= @document.id %>"></div>
    </div>
  </div>
  <hr>

  <!-- DOCUMENT TEXT -->
    <button class="btn btn-primary tweet-toggle" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"> Show Document Text </button>

  <div class="collapse document-textbox" id="collapseExample">
    <div class="panel panel-default">
      <div class="panel-heading data-header">Document Text</div>
      <div class="panel-body">
        <% @document.text.split.each do |word| %>
          <%= render  partial: "shared/word_highlighting", locals: {word: word}  %>
        <% end %>
      </div>
    </div>
  </div><br><br>
</div>
