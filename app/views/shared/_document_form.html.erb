<div><%=flash[:error]%></div>
<div class="form-group">
  <%= form_for [@group, @document] do |f| %>
  	<div>
  		<%= f.label :title, 'Document Title' %>
  		<%= f.text_field :title, placeholder: 'Title', class: "form-control" %>
  	</div>

  	<div>
  		<%= f.label :text, 'Upload File'%>
  		<%= f.file_field :text %>
  	</div>

    <div>
	     <%= f.submit  "Submit", class: "btn btn-md btn-default" %>
    </div>
  <% end %>
</div>
